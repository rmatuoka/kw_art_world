%section.content-header
  %h1
    Informações Técnicas -
    = "#{@product.title}"
    %small Painel de Controle
  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
        Home 
    %li
      %a{:href => "#{admin_products_path()}"}
        %i.fa.fa-dashboard
        Produtos 
    %li.active Informações Técnicas


/ Main content
%section.content
  .row
    / left column
    .col-md-12
      / general form elements
      .box.box-primary
        .box-header
          %h3.box-title Editar Informações Tecnicas
        / /.box-header
        / form start
        = render 'form'
      

      %p
        = link_to t("back_list"), admin_product_product_informations_path(@product), :class => "btn btn-default"
        /= link_to t("show"), admin_product_product_information_path(@product, @product_information), :class => "btn btn-default"
