%section.content-header
  %h1
    Clientes  
    %small Painel de Controle
  %ol.breadcrumb
    %li
      %a{:href => "/admin"}
        %i.fa.fa-dashboard
        Home
    %li.active Clientes
/ Main content
%section.content
  .col-xs-12
    %p
      = link_to "Novo Cliente", new_admin_customer_path, :class => "btn btn-primary" 
    .box
      .box-header
        %h3.box-title 
          Clientes
      .box-body.table-responsive.no-padding
        %table.table.table-hover
          %tr
            %th TÃ­tulo
            %th Publicado
            %th= t("actions")
          - for customer in @customers
            %tr
              %td= customer.title
              %td= show_boolean(customer.published)
              %td
                = link_to t("show"), [:admin, customer], :class=>"btn btn-default"
                = link_to t("edit"), edit_admin_customer_path(customer), :class=>"btn btn-default"
                = link_to t("destroy"), [:admin, customer], :confirm => 'Are you sure?', :method => :delete, :class=>"btn btn-danger"
