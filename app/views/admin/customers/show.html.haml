%section.content-header
  %h1
    Clientes  
    %small Painel de Controle
  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
        Home
    %li.active Clientes
     

/ Main content
%section.content
  .row
    / left column
    .col-md-12
      / general form elements
      .box.box-primary
        .box-header
          %h3.box-title="#{@customer.title}"
        
        .box-body  
          %p
            %b="#{t("activerecord.attributes.customer.description")}:"
            %br
            =@customer.description   
        .box-body  
          %p
            %b="#{t("activerecord.attributes.customer.services_performed")}:"
            %br
            =@customer.services_performed
        .box-body  
          %p
            %b= "#{t("activerecord.attributes.customer.order")}: "
            =@customer.order
        .box-body  
          %p
            %b= "#{t("activerecord.attributes.customer.published")}: "
            =show_boolean(@customer.published)
        - if @customer.company_logo.file?
          .box-body
            %p=image_tag(@customer.company_logo.url)

  = link_to t("back_list"), admin_customers_path, :class => "btn btn-default"
  = link_to t("edit"), edit_admin_customer_path(@customer), :class => "btn btn-default" 
  = link_to "Novo Cliente", new_admin_customer_path, :class => "btn btn-primary"
