%section.content-header
  %h1
    Serviços  
    %small Painel de Controle
  %ol.breadcrumb
    %li
      %a{:href => "/admin"}
        %i.fa.fa-dashboard
        Home
    %li.active Serviços
/ Main content
%section.content   
  .row
    / left column
    .col-md-12
      / general form elements
      .box.box-primary
        .box-header
          %h3.box-title= "#{@service_image.title}"
        .box-body

          %p
            %strong= "#{t('activerecord.attributes.service.published')}:"
            = show_boolean(@service_image.published)
        - if @service_image.img_service.file?
          .box-body
            %strong Imagem:
            %p=image_tag(@service_image.img_service.url)
        .box-footer
          %p
            = link_to t("edit"), edit_admin_service_service_image_path(@service,@service_image), :class=>"btn btn-default"
            = link_to t("back_list"), admin_service_service_images_path, :class=>"btn btn-default"
            = link_to t("destroy"), [:admin, @service, @service_image], :confirm => 'Are you sure?', :method => :delete, :class=>"btn btn-danger"
            = link_to "Nova Imagem", new_admin_service_service_image_path(@service), :class => "btn btn-primary"
