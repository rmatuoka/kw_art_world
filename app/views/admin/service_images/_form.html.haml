= form_for [:admin, @service, @service_image] do |f|
  -if f.error_messages
    .alert.alert-danger.alert-dismissable
      %i.fa.fa-ban
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %b Alert!
      Confira os campos marcados em vermelho.
  .box-body
    .form-group  
      = f.label :title, t("activerecord.attributes.service.title")
      %br
      = f.text_field :title, :class => "form-control", :placeholder => t("activerecord.attributes.service.title")
    .form-group
      = f.label :published, t("activerecord.attributes.service.published")
      %br
      = f.check_box :published
    .form-group
      = f.label :img_service, "Imagem"
      = f.file_field :img_service, :class => "form-control"  
    - if @service_image.img_service.file?
      .form-group
        =image_tag(@service_image.img_service.url)
    .box-footer
      = f.submit "Salvar", :class => "btn btn-primary"
