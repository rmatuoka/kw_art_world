= form_for [:admin, @service] do |f|
  -if f.error_messages
    .alert.alert-danger.alert-dismissable
      %i.fa.fa-ban
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      %b Alert!
      Confira os campos marcados em vermelho.
  .box-body
    .form-group  
      = f.label :title
      = f.text_field :title, :class => "form-control", :placeholder => t("activerecord.attributes.service.title")
    .form-group  
      = f.label :description 
      = f.text_area :description, :class => "form-control", :placeholder => t("activerecord.attributes.service.title")   
    .form-group
      = f.label :highlight
      = f.check_box :highlight
    .form-group
      = f.label :published
      = f.check_box :published     
    .form-group
      %strong Categoria:
      =f.select(:category_ids, @categorias.collect {|category| [ category.title, category.id ] })
    .form-group
      = f.label :service_img
      = f.file_field :service_img, :class => "form-control"  
    - if @service.service_img.file?
      .form-group
        =image_tag(@service.service_img.url)
    
      
  .box-footer
    =f.submit nil, :class => "btn btn-primary"
