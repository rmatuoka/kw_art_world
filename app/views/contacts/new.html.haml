%section.interna#contact
  .container-fluid
    .row
      .container
        %p.breadcrumb > Kattios/Contato
        .col-xs-12.col-md-6
          .row
            = form_for (@contact, :html => {:class =>"formularioContato", :role => "form"}, :remote => true) do |f|
              .col-xs-12
                .form-group
                  = f.text_field :name, :id => "nome", :class => "form-control", :placeholder => "Nome", :required => "Nome deve ser preenchido", :type => "text"
              .col-xs-6
                .form-group                
                  = f.text_field :email, :class => "form-control", :id => "email", :placeholder => "E-mail", :required => "Email deve ser preenchido", :type => "text"
              .col-xs-6
                .form-group
                  = f.text_field :phone, :class => "form-control", :id => "telefone", :placeholder => "Telefone", :required => "Telefone deve ser preenchido", :type => "text"
                .cleafix
              .col-xs-12
                .form-group
                  = f.text_area :message, :class => "form-control", :id => "mensagem", :placeholder => "Mensagem", :required => "Mensagem deve ser preenchida", :type => "text"
              .col-xs-12
                .form-group
                  = f.submit "Enviar", :class => "btn btn-send pull-right"
              .clearfix
        .col-xs-12.col-md-5.col-md-offset-1
          %h1 Kattios Marketing
          .row
            .col-xs-12#location
              %p.first
                =image_tag("ico-location.png")
