                -if category.children.exists?
                  %li.dropdown
                    =link_to services_path(:category=>"#{category.id}"), :class=>"dorpdown-toggle", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button" do
                      =category.title
                      %span.caret
                      
                    %ul.dropdown-menu
                      - category.children.each do |c|     
                        - if c.services.exists?
                          %li.dropdown
                            =link_to services_path(:category=>"#{category.id}"), :class=>"dorpdown-toggle", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button" do
                              =c.title
                              %span.caret
                            %ul.dropdown-menu.dropdown-menu-right
                              - c.services.each do |s|
                                %li
                                  %a{:href => "/services/1"}=s.title
                -else
                  -if category.services.exists?
                    %li.dropdown
                      =link_to services_path(:category=>"#{category.id}"), :class=>"dorpdown-toggle", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button" do
                        =category.title
                        %span.caret
                      %ul.dropdown-menu
                        - category.services.each do |s|
                          %li
                            %a{:href => "/services/1"}=s.title

              
              

