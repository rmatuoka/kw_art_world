%header
  .container
    .row
      .col-sm-3.col-xs-12.logo
        =link_to(image_tag("template/logo.png"),root_path())
      .col-sm-9.hidden-xs.menu.text-right
        %ul.menu
          %li
            =link_to "Institucional", about_us_path(),  :class =>"scroll"
          %li
            =link_to "Serviços", services_path, :class =>"scroll"
            -if @services.count > 0
              %ul
                -@services.each do |service|
                  %li 
                    =link_to(truncate(service.title, :length => 32, :separator => ' ', :omission => '').html_safe, service_path(service.url_slug))
          %li
            =link_to "Clientes", customers_path(), :class =>"scroll"
          %li
            =link_to "Contato", new_contact_path(),  :class =>"scroll"
      %nav.navbar.navbar-default.col-xs-12.visible-xs#minimenu{:role => "navigation"}
        .container-fluid
          / Brand and toggle get grouped for better mobile display
          .navbar-header
            %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"} Menu principal
          / Collect the nav links
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li
                =link_to "Institucional", about_us_path(),  :class =>"scroll"
              %li
                =link_to "Serviços", services_path, :class =>"scroll"
              %li
                =link_to "Clientes", customers_path(), :class =>"scroll"
              %li
                =link_to "Contato", new_contact_path(),  :class =>"scroll"
              
