%section.interna
  .container-fluid
    .row
      .container
        .row
          %h1=@category.title if @service.categories.exists?
          
  .container
    .row
      .col-sm-12
        %h2=@service.title
        
        -contador=0  
        -if @service.service_images.exists?
          -@service_images.each do |image|
            -if contador==0
              .col-sm-12.imagem-principal
                =image_tag(image.img_service.url(:default), :class => "img-responsive")
              -contador=1
            -else
              .col-sm-3
                =link_to image_tag(image.img_service.url(:default), :class => "img-responsive"), image.img_service.url(:original), :id=>"img-#{image.id}", :class=>"gallery", :rel=>"svc-imgs"
          
      .row.description
        .col-sm-12
          %h3= @service.subtitle
          %p= @service.description
          
= render :file => "layouts/_services_box.html.haml"


-content_for(:footer) do
  :javascript
    $(document).ready(function() {

      $("a.gallery").fancybox({
        'transitionIn'	:	'elastic',
        'transitionOut'	:	'elastic',
        'speedIn'		:	600, 
        'speedOut'		:	200, 
        'overlayShow'	:	false
      });
	
    });


